<h1>Listing clients</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Startingweight</th>
    <th>Currentweight</th>
    <th>Favoritefood</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.firstname %></td>
    <td><%= client.lastname %></td>
    <td><%= client.startingweight %></td>
    <td><%= client.currentweight %></td>
    <td><%= client.favoritefood %></td>
    <td><%= link_to 'Show', client %></td>
    <td><%= link_to 'Edit', edit_client_path(client) %></td>
    <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

