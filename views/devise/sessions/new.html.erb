<h2>Sign in</h2>
 
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-horizontal") do |f| %>

  <div class="control-group"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email address", :size => 25 %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password, :placeholder => "Password", :size => 25 %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-large" %></div>
<% end %>

<%= render "devise/shared/links" %>
